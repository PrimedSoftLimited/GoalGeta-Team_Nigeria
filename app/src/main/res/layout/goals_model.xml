<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:id="@+id/card_view"
    android:foreground="?selectableItemBackground"
    android:layout_margin="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/goal_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Goal Title"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/goal_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Goal Description"
            android:layout_below="@+id/goal_title"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/complete_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Completion Rating:             "/>

        <TextView
            android:id="@+id/complete_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="0"/>

        <TextView
            android:id="@+id/complete_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/complete_text"
            android:text="Due Date:                           "/>

        <TextView
            android:id="@+id/complete_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/complete_unit"
            android:layout_alignParentRight="true"
            android:text="0"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>